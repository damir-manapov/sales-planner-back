{
  "name": "sales-planner",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @sales-planner/api dev",
    "build": "pnpm -r build",
    "test": "pnpm --filter @sales-planner/api test",
    "test:e2e": "pnpm --filter @sales-planner/api test:e2e",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "pnpm -r typecheck",
    "check": "./scripts/check.sh",
    "all-checks": "./scripts/all-checks.sh",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.4",
      "undici": ">=6.23.0",
      "lodash": ">=4.17.23",
      "diff": ">=4.0.4",
      "@isaacs/brace-expansion": ">=5.0.1"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@swc/core",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8"
  }
}
