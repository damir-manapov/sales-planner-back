{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "noParameterAssign": "error",
        "useConst": "error",
        "useImportType": "off"
      },
      "complexity": {
        "noBannedTypes": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "packages/api/src/common/base-entity.service.ts",
        "packages/api/src/common/shop-scoped-repository.ts",
        "packages/api/src/common/shop-scoped/base-repository.ts",
        "packages/api/src/common/shop-scoped/coded-repository.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ],
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": [
      "packages/**/src/**/*.ts",
      "packages/**/tests/**/*.ts",
      "packages/**/scripts/**/*.ts",
      "scripts/**/*.sh"
    ]
  }
}
