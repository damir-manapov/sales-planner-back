{
  "name": "@sales-planner/api",
  "version": "0.0.5",
  "description": "NestJS API for sales planner",
  "author": "Damir Manapov",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "biome lint --error-on-warnings .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit && tsc --project scripts/tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:e2e:local": "USE_LOCAL_DB=true vitest run --config vitest.config.e2e.ts",
    "test:e2e:watch": "vitest --config vitest.config.e2e.ts",
    "db:generate": "kysely-codegen --out-file src/database/database.types.ts",
    "db:migrate": "tsx scripts/migrate.ts",
    "script:create-tenant": "bun scripts/create-tenant.ts",
    "compose:up": "docker compose up starter -d",
    "compose:down": "docker compose down",
    "compose:restart": "docker compose restart",
    "compose:reset": "docker compose down -v --remove-orphans"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "@nestjs/swagger": "^11.2.5",
    "csv-parse": "^6.1.0",
    "express": "^5.2.1",
    "kysely": "^0.28.11",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.13",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.15.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.2.3",
    "kysely-codegen": "^0.19.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.9",
    "vercel": "^50.9.6",
    "vitest": "^4.0.18"
  }
}
