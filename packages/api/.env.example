# Server
PORT=3000

# Database connection (use DATABASE_URL for all environments)
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sales_planner

# For Neon/cloud databases, use:
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Serverless mode (set to 'true' for Vercel/Lambda - uses pool size 1)
SERVERLESS=false

# System Admin API key (used to create initial systemAdmin user on first run)
SYSTEM_ADMIN_KEY=your-secure-api-key-here
